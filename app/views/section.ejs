<% include ./header.ejs %>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-9">
    		<h1 class="col-sm-9">Les sections du site</h1>
		</div>
		<div class="col-xs-3">
			<%_ if(log && log.grade>=3) {_%>
			<h1 class="pull-right"><a class="btn btn-primary" href="/section/add" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Nouvelle section</a></h1>
			<%_ }_%>
        </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
            <%_ section.forEach(function(el){_%>
            <tr>
                <td><%=el.nom %></td>
            </tr>
            <%_ }); _%>
        </tbody>
    </table>
</div>
<% include ./footer.ejs %>
