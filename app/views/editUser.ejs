<% include ./header %>
    <div class="container-fluid"/>
    <h1>Edition de <%=user.prenom%> <%=user.nom%></h1>
    <form role="form" method="post">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" class="form-control" id="nom" name="nom" value="<%=user.nom%>">
        </div>
		<div class="form-group">
        	<label class="control-label" for="grade">Grade</label>
			<select class="form-control" id="grade" name="grade">
				<option value="1"<% if(user.grade===1){%>selected<%}%>>Parent</option>
				<option value="2"<% if(user.grade===2){%>selected<%}%>>Animateur</option>
				<option value="3"<% if(user.grade===3){%>selected<%}%>>Admin</option>
			</select>
        </div>
		<div class="form-group">
        	<label class="control-label" for="sec">Section</label>
			<select class="form-control" id="sec" name="sec">
					<option value="">Aucune section</option>
				<%_ section.forEach(function(el){ _%>
					<option <%if(user.section && user.section.toString() == el.id){%>selected="selected"<%}%> value="<%=el._id%>"><%=el.nom%></option>
				<%_ });_%>
			</select> 
        </div>
		<button type="submit" class="btn btn-default">Enregistrer</button>
    </form>
    </div>
<% include ./footer %>
